# 1. Use official Node image
FROM node:20-alpine

# 2. Set working directory
WORKDIR /app

# 3. Copy package.json and package-lock.json
COPY package*.json ./

# 4. Install dependencies
RUN npm install

# 5. Copy all source code
COPY . .

# 6. Expose port Vite uses
EXPOSE 5173

# 7. Run dev server
CMD ["npm", "run", "dev", "--", "--host"]
